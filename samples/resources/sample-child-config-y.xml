<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:u="http://www.adroitlogic.org/ultraesb"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.adroitlogic.org/ultraesb http://schemas.ultraesb.org/ultraesb-2.0.xsd">

    <u:proxy id="echo-proxy-dup">
        <u:transport id="http-8280"/>
        <u:target>
            <u:inDestination>
                <u:address>http://localhost:9000/service/EchoService</u:address>
            </u:inDestination>
            <u:outSequence>
                <u:java><![CDATA[
                    mediation.setPayloadFromString(msg, "NEW:" + mediation.readPayloadAsString(msg));
                ]]></u:java>
            </u:outSequence>
            <u:outDestination>
                <u:address type="response"/>
            </u:outDestination>
        </u:target>
    </u:proxy>

    <u:proxy id="echo-back-dup">
        <u:transport id="http-8280"/>
        <u:transport id="https-8443"/>
        <u:target>
            <u:inSequence>
                <u:java><![CDATA[
                    mediation.setPayloadFromString(msg, "Y");
                    mediation.sendResponse(msg, 200);
                ]]></u:java>
            </u:inSequence>
        </u:target>
    </u:proxy>

</beans>
